  <!-- Style du blog interactif -->
  <style>
    body {
      margin:0;
      font-family:'Segoe UI',Tahoma,Geneva,Verdana,sans-serif;
      background: linear-gradient(120deg,#e8f3f1,#f0f7f6);
      color:#2e3d3a;
      padding:20px;
      overflow-x:hidden;
    }

    header {
      text-align:center;
      font-family:'Dancing Script', cursive;
      font-size:3.5em;
      font-weight:700;
      color:#ff6f91;
      text-shadow:2px 2px 15px rgba(0,0,0,0.2);
      margin-bottom:30px;
    }

    .back-button {
      display:inline-block;
      margin-bottom:20px;
      padding:10px 20px;
      background:#ff6f91;
      color:white;
      border-radius:25px;
      text-decoration:none;
      font-weight:bold;
      transition:0.3s;
    }
    .back-button:hover{opacity:0.8;}

    .articles {
      display:flex;
      flex-direction:column;
      gap:20px;
      max-width:800px;
      margin:0 auto;
      position:relative;
      z-index:2;
    }

    .card {
      background:rgba(255,255,255,0.85);
      backdrop-filter:blur(10px);
      padding:20px;
      border-radius:20px;
      box-shadow:0 8px 25px rgba(0,0,0,0.05);
      transition:0.4s;
      cursor:pointer;
      position:relative;
      overflow:hidden;
    }

    .card:hover {
      transform:translateY(-5px);
    }

    .card h2 {
      margin-bottom:10px;
      color:#4a7c75;
    }

    .card p {
      line-height:1.5em;
      font-size:1.1em;
      margin-bottom:10px;
    }

    .date {
      font-size:0.9em;
      opacity:0.6;
    }

    /* Particules l√©g√®res sur le blog */
    .particle{position:absolute;width:6px;height:6px;background:white;border-radius:50%;opacity:0.7;pointer-events:none;animation:particleMove 12s linear infinite;}
    @keyframes particleMove{0%{transform:translateY(100vh) scale(0.3);opacity:0.5;}50%{opacity:1;}100%{transform:translateY(-10vh) scale(1);opacity:0;}}

    /* Responsive */
    @media(max-width:768px){
      header{font-size:2.8em;}
      .card{padding:15px;}
      .card p{font-size:1em;}
    }
    @media(max-width:480px){
      header{font-size:2.2em;}
      .card{padding:12px;}
      .card p{font-size:0.95em;}
    }
  </style>
</head>

<body>

<header>Blog Interactif - Espace Douceur</header>

<a href="index.html" class="back-button">‚Üê Retour √† l'Espace Douceur</a>

<div class="articles" id="articles">
