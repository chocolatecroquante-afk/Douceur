<!-- Particules douces -->
<div id="particles-container"></div>

<!-- JS interactif -->
<script>
const cards=document.querySelectorAll('.card');
const particlesContainer=document.getElementById('particles-container');

// Ajouter animation "clic pour lire" sur chaque article
cards.forEach(card=>{
  card.addEventListener('click',()=>{
    card.querySelector('p').innerText=card.dataset.content;
    card.style.background='rgba(255,255,255,0.95)';
    card.style.boxShadow='0 12px 30px rgba(0,0,0,0.1)';
  });
});

// G√©n√©rer des particules douces
function generateParticles(count=40){
  particlesContainer.innerHTML='';
  for(let i=0;i<count;i++){
    const p=document.createElement('div');
    p.className='particle';
    p.style.left=Math.random()*100+'%';
    p.style.width=4+Math.random()*6+'px';
    p.style.height=p.style.width;
    p.style.animationDuration=(8+Math.random()*6)+'s';
    particlesContainer.appendChild(p);
  }
}
generateParticles();
</script>

</body>
</html>
